@using MvcCv.Models.Entity;
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
    int sayi = 0;
}
<!DOCTYPE html>
<html>
<p></p>
<body class="hold-transition sidebar-mini">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header p-2">
                                </div><!-- /.card-header -->
                                <div class="card-body">

                                    <div class="tab-pane" id="timeline">
                                        <!-- The timeline -->
                                        <div class="timeline timeline-inverse">
                                            <!-- timeline time label -->
                                            @foreach (var item in Model)
                                            {
                                                sayi++;
                                                if (sayi % 2 == 0)
                                                {
                                                    <div class="time-label">
                                                        <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-success">
                                                            <span>
                                                                @item.Tarih
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div>
                                                        <div class="timeline-item">
                                                            <div class="timeline-body">
                                                                @item.Aciklama
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="time-label">
                                                        <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-primary">
                                                            <span>
                                                                @item.Tarih
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div>
                                                        <div class="timeline-item">
                                                            <div class="timeline-body">
                                                                @item.Aciklama
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <a href="/Sertifika/YeniSertifika/" class="btn btn-info">Sertifika Ekle</a>
                                    </div>
                                </div>
                            </div><!-- /.card-body -->
                            </div>
                            <!-- /.nav-tabs-custom -->
                        </div>
                        <!-- /.col -->
                    </div>
            </section>
</body>
</html>


